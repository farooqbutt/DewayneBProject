@model QuestionsManagementApp.Models.Questions

@{
    ViewData["Title"] = "SeeAnswer";
}

<h1>Answer of Question</h1>

<div>
    <h4>Answer and Details of your Question</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Case No. :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaseNumber)
        </dd>
        <dt class = "col-sm-2">
            Member Name :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Urgent) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Urgent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Submission Date :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            Asked By : 
        </dt>
        <dd class = "col-sm-10">
            You
        </dd>
        <dt class = "col-sm-2">
            Answer of Question :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswertoQuestion)
        </dd>
        <dt class = "col-sm-2">
            Answered By :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answeredby)
        </dd>
        <dt class = "col-sm-2">
            Question Type :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionType.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="MyQuestions">Back to List</a>
</div>
